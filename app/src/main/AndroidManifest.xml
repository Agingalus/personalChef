<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.personalchef.mealplan">

    <uses-sdk android:minSdkVersion="20" />

    <!-- Hardware features that the app uses -->
    <uses-feature
        android:name="android.permission.USE_FINGERPRINT"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" /> <!-- Permissions asked to user -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <!-- Fingerprint is deprecated - might be required for previous versions -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/> <!-- For API level 28+ i.e. Android 9-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".services.StepsCalculatorService"
            android:enabled="true"
            android:exported="false"></service>
        <service
            android:name=".services.NotificationService"
            android:exported="false" />

        <activity
            android:name=".SetStepGoal"
            android:label="@string/stepGoal"/>
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/LaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StepCounterActivity"
            android:label="@string/stepCounterSummary"/>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/userProfile" />
        <activity android:name=".MainActivity"
            android:label="@string/home"/>

    </application>

</manifest>